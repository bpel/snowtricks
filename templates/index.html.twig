{% extends 'base.html.twig' %}
 {% block body %}
     <div class="my-3 my-md-5">
         <div class="container">
         <div class="page-header">
             <h1 class="page-title">Accueil</h1>
         </div>
             {% if message is defined and message is not empty %}
                 <div class="alert alert-icon alert-primary" role="alert">
                     <i class="far fa-info-circle"></i>{{ message }}
                 </div>
             {% endif %}
             <div class="row row-cards row-deck">
                 {% for trick in tricks %}
                     <div class="col-sm-6 col-xl-3">
                         <div class="card">
                             {% if trick.illustrations is not empty %}
                                 <a href="{{ path('trick_show', {'id': trick.id}) }}">
                                     <img class="card-img-top card-img-snowtricks" src="{{ asset("build/img/")}}{{ trick.illustrations|first.filename }}" alt="no img">
                                 </a>
                             {% else %}
                                 <a href="{{ path('trick_show', {'id': trick.id}) }}">
                                     <img class="card-img-top card-img-snowtricks" src="{{ asset('build/img/No_Image_Available.jpg')}}" alt="{{ trick.nametrick }}">
                                 </a>
                             {% endif %}
                             <div class="card-body d-flex flex-column">
                                 {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                     <div class="row">
                                         <div class="col-md-6">
                                             <h4><a href="{{ path('trick_show', {'id': trick.id}) }}">{{ trick.nameTrick }}</a></h4>
                                         </div>
                                         <div class="col-md-6 text-right">
                                             <a class="btn btn-outline-primary btn-sm" href="{{ path('trick_edit', {'id': trick.id}) }}" role="button"><span class="fas fa-edit"></span></a>
                                             <a class="btn btn-outline-primary btn-sm" href="{{ path('trick_delete', {'id': trick.id}) }}" role="button" onclick="confirm('Voulez vous vraiment supprimer?')"><span class="fas fa-trash"></span></a>
                                         </div>
                                     </div>
                                 {% else %}
                                     <h4><a href="{{ path('trick_show', {'id': trick.id}) }}">{{ trick.nameTrick }}</a></h4>
                                 {% endif %}
                             </div>
                         </div>
                     </div>
                 {% endfor %}
             </div>
         </div>
     </div>
 {% endblock %}