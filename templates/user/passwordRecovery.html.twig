{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}

    <div class="container">
        <div class="card-header">
            <h3 class="card-title">Récupération du compte - modifier le mot de passe</h3>
        </div>
        <div class="card-body">

            {% if message is defined and message is not empty %}
                <div class="alert alert-icon alert-primary" role="alert">
                    <i class="fas fa-info-circle mr-2" aria-hidden="true"></i> {{ message }}
                </div>
            {% endif %}


            {% if formPasswordChange is defined and formPasswordChange is not empty %}
                {{ form_start(formPasswordChange) }}
                {{ form_widget(formPasswordChange) }}
                {{ form_end(formPasswordChange) }}
            {% endif %}
        </div>
    </div>

{% endblock %}